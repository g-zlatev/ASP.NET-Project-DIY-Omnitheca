@model ProductFormModel

<div class="container">
    <div class="row">

        <div class="col-lg-6 col-sm-12">
            <h2 class="heading-margin">@ViewBag.Title</h2>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Name">Product name</label>
                    <input asp-for="Name" class="form-control" placeholder="Your product name here...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Brand">Product brand</label>
                    <input asp-for="Brand" class="form-control" placeholder="Product brand...">
                    <span asp-validation-for="Brand" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location">Product location</label>
                    <input asp-for="Location" class="form-control" placeholder="Enter city.">
                    <span asp-validation-for="Location" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LendingPrice">Price</label>
                    <input type="number" asp-for="LendingPrice" step="0.01" class="form-control" placeholder="Enter product rent price.">
                    <span asp-validation-for="LendingPrice" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Enter product image url.">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Description">Product description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Product description. No more than 300 characters."></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Product category</label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>
