@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

@{
    var products = Model.Products;

    var firstProduct = products.Any() ? products[0] : null;

    var secondProduct = products.Count > 1 ? products[1] : null;

    var thirdProduct = products.Count > 2 ? products[2] : null;

    string ShortenDescription(string input)
    {
        return input.Length > 30 ? input.Substring(0, 30) + "..." : input;
    }
}

@if (!products.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to DUI Omnitheca!</h1>
        <p class="lead">Your favourite place for renting tools and equipment for your projects.</p>
        <hr class="my-4">
        <p>There are currently no products to show. Feel free to add some!</p>
        <p class="lead">
            <a asp-controller="Products" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add product</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide w-75 h-25 offset-2" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstProduct != null)
        {
            <div class="carousel-item active">
                <a asp-controller="Products" asp-action="Details" asp-route-id="@firstProduct.Id"><img style="width: 100%; height: 30vw; object-fit: scale-down;" src="@firstProduct.ImageUrl" alt="@firstProduct.Brand @firstProduct.Name"></a>
                <div class="carousel-caption d-none d-md-block text-dark">
                    <h5>@firstProduct.Brand @firstProduct.Name</h5>
                    <p>@ShortenDescription(firstProduct.Description)</p>
                </div>
            </div>
        }
        @if (secondProduct != null)
        {
            <div class="carousel-item">
                <a asp-controller="Products" asp-action="Details" asp-route-id="@secondProduct.Id"><img style="width: 100%; height: 30vw; object-fit: scale-down;" src="@secondProduct.ImageUrl" alt="@secondProduct.Brand @secondProduct.Name"></a>
                <div class="carousel-caption d-none d-md-block text-dark">
                    <h5>@secondProduct.Brand @secondProduct.Name</h5>
                    <p>@ShortenDescription(secondProduct.Description)</p>
                </div>
            </div>
        }
        @if (thirdProduct != null)
        {
            <div class="carousel-item">
                <a asp-controller="Products" asp-action="Details" asp-route-id="@thirdProduct.Id"><img style="width: 100%; height: 30vw; object-fit: scale-down;" src="@thirdProduct.ImageUrl" alt="@thirdProduct.Brand @thirdProduct.Name"></a>
                <div class="carousel-caption d-none d-md-block text-dark">
                    <h5>@thirdProduct.Brand @thirdProduct.Name</h5>
                    <p>@ShortenDescription(thirdProduct.Description)</p>
                </div>
            </div>
        }

    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon bg-secondary" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon bg-secondary" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="jumbotron mt-4">
    <div class="row">
        <div class="col-md-4 text-center">
            @Model.TotalProducts Products
        </div>
        <div class="col-md-4 text-center">
            @Model.TotalUsers Users 
        </div>
        <div class="col-md-4 text-center">
            @Model.TotalRents Rents
        </div>
    </div>
</div>