@model BecomeLenderFormModel

@{
    ViewBag.Title = "Become Lender";
}


<div class="container">
    <div class="row">

        <div class="col-lg-6 col-sm-12">
            <h2 class="heading-margin">@ViewBag.Title</h2>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Name">Lender name</label>
                    <input asp-for="Name" class="form-control" placeholder="Add at least two names.">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone number</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Your phone number.">
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary mt-3" type="submit" value="Done" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
