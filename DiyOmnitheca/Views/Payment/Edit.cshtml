@model PaymentModel

@{
    ViewBag.Title = "Edit Payment";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-route-returnUrl="./Edit" method="post">
            <h4>Payment Information</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.BankName"></label>
                <input asp-for="@Model.BankName" class="form-control" />
                <span asp-validation-for="@Model.BankName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Iban"></label>
                <input asp-for="@Model.Iban" class="form-control" />
                <span asp-validation-for="@Model.Iban" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Money"></label>
                <input asp-for="@Model.Money" class="form-control" />
                <span asp-validation-for="@Model.Money" class="text-danger"></span>
            </div>
            <a class="btn btn-warning text-dark" asp-area="Identity" asp-page="/Account/Manage/Payment" title="Manage">Back</a>
            <button type="submit" class="btn btn-primary ml-3">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}